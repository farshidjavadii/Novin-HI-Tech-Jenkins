pipeline {
    agent any

    parameters {
        choice(choices: ['discovery','gateway','user','bill','payment'],  name: 'PROJECT')
    }

    stages {
        stage('Create Swarm'){
            steps {
                sh "docker swarm init | true"
            }
        }
        stage('SCM') {
            steps {
                git branch: "master", url: 'https://github.com/technicallevelup/Novin-HI-Tech-Swarm.git'
            }
        }
        stage('Deploy'){
            steps {
                sh """
                    cd services/backend/
                    ls
                    docker stack deploy -c ${params.PROJECT}.yml level_up
                """
            }
        }
    }
}
